extends layout

block content 
	h1 面包店
	each dot in list
		p		
			a(href='/bread/list/' + dot.bakeryName + '-' + dot.bakeryId ) #{dot.bakeryName}
			| #{dot.address}
			a(href='/bakery/update/' + dot.bakeryId ) 更新
			form(method='post')
				button(type="submit", formaction='/bakery/delete/#{dot.bakeryId}',value="delete") 删除

	br
	a(href='/bakery/add') 添加面包店
	