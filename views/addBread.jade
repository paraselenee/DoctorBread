extends layout    
    
block content 
    h1 添加面包
    form(method='post', action='/bread/add')
        div.form-row
            label
                span 买了啥
                input(type='text',name='breadName')        
        div.form-row
            label
                span 面包店
                select(id="mySelect",name='bakeryId')
                    option(value=null,disabled,selected) 选个店
                    each bakery in bakeryList
                        option(value="#{bakery.bakeryId}") #{bakery.bakeryName}
                    option(value="/bakery/add") 添加新的面包店                    
        div.form-row
            label
                span 星星
                select(name='rating')
                    option(value='',disabled,selected)
                    - for (var i=0; i<8; i++){
                        option(value=i) #{i}
                    - }                  
        div.form-row
            label
                span 说点啥
                input(type='text',name='comment',placeholder='请天牛侠多多指教~')
        div.form-row
            label
                span 又买一次
                input(type='text',name='buyAgain')
        div.form-row
            label
                span 图片
                input(type='text',name='image',placeholder='传个照片~')
        div.form-row
            input(type='submit')
